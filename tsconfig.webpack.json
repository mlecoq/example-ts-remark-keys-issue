{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "."
  },

  "exclude": ["node_modules", "dist"]
}
